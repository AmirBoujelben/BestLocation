<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Input for Pseudo -->
    <EditText
        android:id="@+id/inputPseudo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pseudo"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input for Latitude -->
    <EditText
        android:id="@+id/inputLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/inputPseudo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Input for Longitude -->
    <EditText
        android:id="@+id/inputLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/inputLatitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Position Button -->
    <Button
        android:id="@+id/btnAddPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Position"
        app:layout_constraintTop_toBottomOf="@id/inputLongitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
